{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": false,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "es6",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "typeRoots": ["./src/lib/types/index.d.ts"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
